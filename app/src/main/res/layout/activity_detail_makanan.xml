<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".detailMakananActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgMakanan"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:src="@drawable/sambal_uleg_dari_indonesia"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/txtMakanan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sambal Uleg Dari Indonesia"
            android:textStyle="bold"
            android:paddingTop="15dp"
            android:gravity="center"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/txtDetailMakanan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:text="pada suatu hari ada seorang bajak laut yang sedang berada di laut
dan dia sedang mengendarai kapal yang sedang berlabuh di lautan"
            android:gravity="center"/>

    </LinearLayout>

</ScrollView>